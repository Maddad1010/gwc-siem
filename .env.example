# Environment variables for GWC-SIEM
# Copy this file to .env and customize for your environment

# Database Configuration
DATABASE_URL=sqlite:///seclog.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/gwc-siem.log

# Security Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
ENABLE_AUTH=false

# File Upload Settings
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=uploads/

# Performance Settings
BATCH_SIZE=1000
MAX_CONCURRENT_UPLOADS=3

# Development Settings
DEBUG=true
RELOAD=true

# Optional: Database connection for PostgreSQL (future feature)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=gwcsiem
# POSTGRES_USER=gwcsiem
# POSTGRES_PASSWORD=your-password

# Optional: Redis for caching (future feature)
# REDIS_URL=redis://localhost:6379/0

# Optional: Email notifications
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=alerts@gwc-siem.local

# Optional: Webhook notifications
# WEBHOOK_URL=https://hooks.slack.com/your-webhook-url
# WEBHOOK_TIMEOUT=10

# Optional: GeoIP Database (requires MaxMind license)
# GEOIP_DB_PATH=data/GeoLite2-City.mmdb

# Development/Testing
TESTING=false
TEST_DATABASE_URL=sqlite:///test_seclog.db